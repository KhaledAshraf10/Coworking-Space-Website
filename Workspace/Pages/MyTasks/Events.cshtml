@page
@model Workspace.Pages.MyTasks.EventsModel
@{
    ViewData["Title"] = "Events";
}

<script>
    document.querySelector("body").style.backgroundColor = "#F6F1E9";
    document.getElementById("header").style.width = "100%";
    document.getElementById("header").style.margin = "0";
</script>


<style>

    #hero .btn-attend {
        font-family: "Raleway", sans-serif;
        font-weight: 500;
        font-size: 26px;
        letter-spacing: 1px;
        display: inline-block;
        padding: 14px 32px;
        border-radius: 4px;
        transition: 0.5s;
        line-height: 1;
        color: #fff;
        animation-delay: 0.8s;

        margin-top: 50px;
   }

    #hero .btn-attend:hover {
        background: #C07F00;
    }

    .carousel-item{
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    #hero{
        margin-bottom: 80px;
    }



    #CreateEvent p{
        font-family: "Raleway", sans-serif;
        font-size: 30px;
        text-align: center;
        margin-bottom: 30px;
    }

    .Organize{
        width: 350px;
        height: 100px;
        font-size: 20px;
        color: white;
        margin-bottom: 100px;
        background-color: #E8AA42;
    }

    .Organize:hover{
        color: #E57C23;
    }

</style>


