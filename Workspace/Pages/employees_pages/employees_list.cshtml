@page
@model Workspace.Pages.employees_pages.employees_listModel
@{
    ViewData["Title"] = "Employees";
}
<!DOCTYPE html>
<head>

    <link rel="stylesheet" href="~/css/emplist_style.css" asp-append-version="true" />
</head>





<div class="search-container">
    <form method="post" autocomplete="off">
		<input type="text" autocomplete="off" value=""   asp-for="@Model.e.ID" placeholder="Search ID,name or pos...">
        <button type="submit"  asp-page-handler="Search"><i class="fas fa-search"></i></button>
    </form>
</div>

<div style="float:right;">

        <a asp-page="/employees_pages/Hire_Emp" class="add-user-btn"><i class="fas fa-user-plus"></i> Hire a new employee </a>

   
       
</div>










<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<div class="container mt-3 mb-4">
    <div class="col-lg-9 mt-4 mt-lg-0">
        <div class="row">
            <div class="col-md-12">
                <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                    <table class="table manage-candidates-top mb-0">
                        <thead>
                            <tr>
                                <th>Employee name</th>
                                <th class="text-center">Status</th>

                                <th class="action text-left">ID</th>
                            </tr>
                        </thead>
                        <tbody>


                         @if(@Model.dt.Rows.Count==0){
                             <tr>
                                 <td>
                            <h6 class="text-danger">@Model.msgNotFound</h6></tr>
                          

                         }
                        
                            @for (int x = 0; x < @Model.dt.Rows.Count;  x++)
                            {
                                <tr class="candidates-list">
                                    <td class="title">
                                        <div class="thumb">
                                            <img class="img-fluid" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="">
                                        </div>
                                        <div class="candidate-list-details">
                                            <div class="candidate-list-info">
                                                <div class="candidate-list-title">
                                                    <h5 style="color:darkgreen"class="mb-0">@Model.dt.Rows[x][1] @Model.dt.Rows[x][2]</h5>   @*NAME*@
                                                </div>
                                                <div class="candidate-list-option">
                                                    <ul class="list-unstyled">
                                                        <li><i class="fas fa-phone"></i>@Model.dt.Rows[x][6] </li>
                                                        <li><i class="fas fa-map-marker-alt pr-1"></i>@Model.dt.Rows[x][11]</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="candidate-list-favourite-time text-center">
                                        <a class="candidate-list-favourite order-2 text-secondary" href="#"><i class="fas fa-regular fa-clock"></i></a>   @*the heart icon*@
                                        <span class="candidate-list-time order-1">@Model.dt.Rows[x][15]</span>
                                    </td>
                                    <td>#@Model.dt.Rows[x][0]</td>
                                    <td>
                                        <ul class="list-unstyled mb-0 d-flex justify-content-end">

                                            <li><a href="#" class="text-info" data-toggle="tooltip" title="" data-original-title="Edit"><i class="fas fa-pencil-alt"></i></a></li>
                                            <li><a href="#" class="text-danger" data-toggle="tooltip" title="" data-original-title="Delete"><i class="far fa-trash-alt"></i></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                   

                      
                    </table>
                  <br />
                  <br />
                 
                    <div class="text-center mt-3 mt-sm-3">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item disabled"> <span class="page-link">Prev</span> </li>
                            <li class="page-item active" aria-current="page"><span class="page-link">1 </span> <span class="sr-only">(current)</span></li>
                        
                            <li class="page-item"> <a class="page-link" href="#">Next</a> </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>