        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        overflow: hidden;
        padding-bottom: 100px;
    }

    .chart-container-occupance {
        position: relative;
        height: 710px;
        margin-bottom: 20px;
        padding: 50px;
        background-color: #f9f7f0;
        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0,0.1);
        text-align: center;
