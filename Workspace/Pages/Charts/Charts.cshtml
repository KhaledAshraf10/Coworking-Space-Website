        padding-bottom: 100px;
    }

    .chart-container-event {
        position: relative;
        height: 710px;
        margin-bottom: 20px;
        padding: 50px;
        background-color: #f7f5ed;
        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
